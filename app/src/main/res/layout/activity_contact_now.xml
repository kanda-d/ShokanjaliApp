<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactNow">



    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginBottom="29dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:textColor="#4E4E4E"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Contact Now"/>

        </LinearLayout>



        <EditText
            android:textColor="#222"
            android:layout_gravity="center"
            android:id="@+id/pName"
            android:paddingBottom="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#801D1D1D"
            android:hint="Name"
            android:inputType="text"
            android:textColorHint="#801D1D1D"
            android:textSize="15dp"
            />


        <EditText
            android:visibility="gone"
            android:textColor="#222"
            android:layout_gravity="center"
            android:id="@+id/pandit"
            android:editable="false"
            android:layout_height="wrap_content"
            android:backgroundTint="#801D1D1D"
            android:ems="10"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:textColorHint="#801D1D1D"
            android:hint="Pandit Mobile "
            android:paddingBottom="15dp"
            android:textSize="15dp"
            />

        <EditText
            android:textColor="#222"
            android:layout_gravity="center"
            android:id="@+id/pMobile"
            android:paddingBottom="15dp"
            android:maxLength="10"
            android:layout_height="wrap_content"
            android:backgroundTint="#801D1D1D"
            android:inputType="phone"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:textColorHint="#801D1D1D"
            android:hint="Mobile Number"
            android:textSize="15dp"
            />



        <EditText
            android:textColor="#222"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:layout_height="70dp"
            android:backgroundTint="#801D1D1D"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:hint="Address "
            android:inputType="text"
            android:id="@+id/pAddress"
            android:ems="10"
            android:gravity="start|top"
            android:textColorHint="#801D1D1D"
            android:textSize="15dp"/>


        <EditText
            android:textColor="#222"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:layout_height="70dp"
            android:backgroundTint="#801D1D1D"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:hint="Send Message "
            android:inputType="text"
            android:id="@+id/pMessage"
            android:ems="10"
            android:gravity="start|top"
            android:textColorHint="#801D1D1D"
            android:textSize="15dp"/>


        <ProgressBar
            android:elevation="4dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/updateProg"
            tools:ignore="MissingConstraints" />


        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/addPandit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            />




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>