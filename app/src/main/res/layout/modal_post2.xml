<LinearLayout android:background="#fff"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/clickLinearPost"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:textAlignment="center"
        android:text="उठावनी"
        android:id="@+id/mText"
        android:layout_marginLeft="0dp"
        android:fontFamily="sans-serif-black"
        android:background="#494949"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


<LinearLayout
    android:background="#0CC2185B"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="-13dp"
        android:layout_margin="0dp"
        android:layout_width="210dp"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/pProfile"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pic1" />
        <TextView
            android:id="@+id/ptitle"
            android:background="#222"
            android:textAlignment="center"
            android:text="स्व. श्री आदित्य कुमार गुप्ता "
            android:textColor="#fff"
            android:textSize="12dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pdetails"
            android:padding="4dp"
            android:textAlignment="textStart"
            android:text="हमारे पूज्य श्री चतुरसेन अग्रवाल का आकस्मिक निधन कल दि. 3.4.19 को प्राप्त 10 से 11 बजे तक पुरषों/महिलओं की आर्य समाज मंदिर जयपुर हॉउस, आगरा पर होगी | "
            android:textSize="12dp"
            android:textColor="#383838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/pshok"
            android:padding="4dp"
            android:textAlignment="textStart"
            android:text="शोकाकुल : - श्रीमती प्रतिभा सेन (धर्मपत्नी), डॉ. राजीव सेन ज्योति सेन, डॉ. संजय सेन, डॉ. विद्या सेन (पुत्र-पुत्रवधू), डॉ. शिवशंकर जैन, डॉ. विनायक अग्रवाल (पोत्र - पोत्री), सोम्या - अनुज पंखुरी - शशांक ( पोत्र - पोत्रदमाद) एवम समस्त सेन परिवार |"
            android:textSize="12dp"
            android:textColor="#383838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:background="#FF0404"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/pAbout"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="15dp"
        android:text="फर्म : सेन नर्सिंग होम, 44 गजानन नगर, कोठी मीणा बाज़ार आगरा, \न मो: 9348785696, 9319795695"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:id="@+id/hidePromo"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/text"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:text="This Post is Created via Shokanjali App"
                android:textSize="10dp"
                android:textColor="#383838"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/logo"
                android:layout_marginHorizontal="5dp"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"/>

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:gravity="end"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wh"
            android:layout_width="25dp"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_w"/>
        <ImageView
            android:id="@+id/fb"
            android:layout_marginHorizontal="5dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_f"/>

        <ImageView
            android:id="@+id/insta"
            android:layout_marginHorizontal="5dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_i"/>

        <ImageView
            android:id="@+id/share"
            android:layout_marginHorizontal="5dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_s"/>

    </LinearLayout>

</LinearLayout>



